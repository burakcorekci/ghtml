@params(
  value: String,
  on_input: fn(String) -> msg,
  on_click: fn() -> msg,
  on_focus: fn() -> msg,
  on_blur: fn() -> msg,
)

<div class="form">
  <input
    type="text"
    class="input"
    value={value}
    placeholder="Type something..."
    @input={on_input}
    @focus={on_focus()}
    @blur={on_blur()}
  />
  <button class="btn" @click={on_click()}>Submit</button>
</div>
