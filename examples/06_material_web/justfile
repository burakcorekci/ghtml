# Material Web Example with Template Generation

# Path to the ghtml project
gen := "../../"

default:
    @just --list

# Generate .gleam files from .lustre templates
codegen:
    cd {{gen}} && gleam run -m ghtml -- "{{justfile_directory()}}"

# Generate templates in watch mode
codegen-watch:
    cd {{gen}} && gleam run -m ghtml -- watch "{{justfile_directory()}}"

# Build the project (runs codegen first)
build:
    just codegen
    gleam build

# Start dev server with hot reload
dev:
    just codegen
    gleam run -m lustre/dev start

# Clean generated files and build artifacts
clean:
    cd {{gen}} && gleam run -m ghtml -- clean "{{justfile_directory()}}"
    rm -rf build
