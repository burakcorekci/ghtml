@import(types.{type Status, Online, Away, Offline})

@params(status: Status)

<div class="status-display">
  {#case status}
    {:Online}
      <span class="online">Online</span>
    {:Away(reason)}
      <span class="away">Away: {reason}</span>
    {:Offline}
      <span class="offline">Offline</span>
  {/case}
</div>
